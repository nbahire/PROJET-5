{% extends 'layouts/base.html.twig' %}


{% block title 'Register!' %}

{% block body %}

	<div class="row pt-5 pb-5 mt-5 mb-5">

		<div class="col-md-6 border rounded shadow mx-auto">

			{% for flashError in app.flashes('verify_email_error') %}
				<div class="alert alert-error rounded mb-3" role="alert">{{ flashError }}</div>
			{% endfor %}

			<h1 class="my-5 text-center ">Créer un compte</h1>
			{{ form_start(registrationForm) }}
			<div class="row">
				<div class="col-md-6">
					{{ form_row(registrationForm.name, {
                label: 'Pseudo'
            }) }}


				</div>
				<div class="col-md-6">

					{{ form_row(registrationForm.email) }}
				</div>
			</div>
			{{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
			{{ form_row(registrationForm.agreeTerms) }}

			<button type="submit" class="btn btn-success btn-lg btn-block">S'enregistrer</button>

			<p class="mt-5 mb-3 text-center text-muted">
				Déja un compte ?
				<a href="{{path('app_login')}}">Se connecter</a>
			</p>
			{{ form_end(registrationForm) }}
		</div>
	</div>


{% endblock %}
