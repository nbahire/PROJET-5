{% extends 'layouts/base.html.twig' %}


{% block title %}Réinitialisez votre mot de passe
{% endblock %}

{% block header %}
	<h1 class="pt-4 text-center">Réinitialisation du mot de passe</h1>

{% endblock %}


{% block body %}
	<div class="row my-5 py-5">
		<div class="col-md-6 mx-auto my-5 py-5">

			<h2 class="mb-4">Modifier le mot de passe</h2>

			{{ form_start(resetForm) }}
			{{ form_row(resetForm.plainPassword) }}
			<button class="btn btn-success btn-block">Modifier</button>
			{{ form_end(resetForm) }}
		</div>


	</div>


{% endblock %}
