{% extends 'layouts/base.html.twig' %}


{% block title %}Réinitialisez votre mot de passe
{% endblock %}
{% block header %}
	<h1>Réinitialisation du mot de passe</h1>

{% endblock %}

{% block body %}
	<div class="row  pt-5 pb-5 mt-5 mb-5">
		<div class="py-5 col-md-6 border rounded shadow m-auto mx-auto">


			{% for flashError in app.flashes('reset_password_error') %}
				<div class="alert alert-danger" role="alert">{{ flashError }}</div>
			{% endfor %}
			<h2 class="h4">Réinitialisez votre mot de passe</h2>
			<div class="password-instructions text-muted my-4">

					<small>
						Saisissez l'adresse e-mail que vous avez utilisée lors de votre inscription et nous vous enverrons des instructions pour réinitialiser votre mot de passe.
                    
                    </small>
			</div>


			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div></div>

<button class="my-2 btn">Réinitialiser</button>


			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}
