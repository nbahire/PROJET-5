{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title "Interface d'administration" %}

{% block page_content %}
	<div class="container">
		<div class="row">
			<div class="col-6 alert-info">
				<span class="display-3">{{countAllUsers['value']}}</span>Utilisateurs

			</div>
			<div class="col-6 alert-danger">
				<span class="display-3">{{countAllComments['value']}}</span>Commentaires

			</div>
		</div>
		<div class="row mt-3">
			<div class="col-12">
				<p class="h3">Liste des articles</p>
				<ul class="list-group">
					{% for post in posts %}

						<li class="list-group-item d-flex justify-content-between align-items-center">
							{{post.title}}
							<span class="badge badge-primary badge-pill">14</span>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
{% endblock %}
