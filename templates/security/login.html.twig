{% extends 'layouts/base.html.twig' %}


{% block title %}Log in!
{% endblock %}

{% block header %}
	<div class="mt-5 mb-5 text-center">
		<h1 class="mb-3">Contact</h1>
		<h2 class="h5 mb-2 text-center  text-muted">
			Si vous souhaitez discuter d'un projet,
			veuillez remplir le formulaire ci-dessous et je vous répondrai sous 1 à 2 jours.
		</h2>


	</div>

{% endblock %}

{% block body %}

	<div class="row  pt-5 pb-5 mt-5 mb-5">
		<div class="col-md-6 border rounded shadow m-auto mx-auto">

			<h1 class="mt-5 mb-3 text-center ">Se connecter</h1>
			<form method="post">
				{% if error %}
					<div class="mb-3 alert alert-error rounded" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
				</div>
				<div class="form-group">
					<label for="password">Mot de passe</label>
					<input type="password" name="password" id="password" class="form-control" required>
				</div>
				<div class="d-flex justify-content-between">
					<div class="form-group">
						<div class="form-check">
							<input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">

							<label class="form-check-label" for="remember_me">

								Se souvenir de moi

							</label>

						</div>
					</div>
					<a href="{{path('app_forgot_password_request')}}">Mot de passe oublié</a>
				</p>

			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

<button class="btn btn-lg btn-success btn-block" type="submit">

				Se connecter
			</button>

			<p class="mt-5 mb-3 text-center text-muted">Pas encore de compte ?
				<a href="{{path('app_register')}}">Créer un compte</a>
			</p>

		</form>
	</div>
{% endblock %}
