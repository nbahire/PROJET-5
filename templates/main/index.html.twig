	<section>
		<h2 class="mb-3 text-center text-muted">Dérnier billet de blog</h2>
		<div class="mb-5">

			<div class="mt-5 pb-5 d-flex border rounded shadow ">


				<article class="col-10 ml-3 mt-5">
					<h2 class="">

						<a class="text-muted text-decoration-none" href="{{path('app_posts_show', {id: posts|last.id})}}">

							{{posts|last.title}}

						</a>
					</h2>
					<time class="h4 time text-center text-success">
						{{ posts|last.createdAt| format_datetime('medium', 'none', locale='fr')}}
					</time>
					<div class="description  mt-3">
						<p>
							{{((posts|last.description |u.truncate(300, ' ...', false))|raw)|nl2br}}


						</p>
					</div>
					<a href=" {{path('app_posts_show', {id: posts|last.id} )}}">

						<button type="button" class="btn btn-success">lire la suite</button>
