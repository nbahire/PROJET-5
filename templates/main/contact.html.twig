{% extends 'layouts/base.html.twig' %}

{% block title 'Contact |Alain N Bahire ' %}


{% block header %}
	<div class="mt-5 mb-5 text-center">
		<h1 class="mb-3">Contact</h1>
		<h2 class="h5 mb-2 text-center  text-muted">Si vous souhaitez discuter d'un projet, veuillez remplir le formulaire ci-dessous et je vous répondrai sous 1 à 2 jours.</h2>


	</div>

{% endblock %}
{% block body %}


	<!-- Contact Section Form-->
	<div class="row pt-5 pb-5 mt-5 mb-5">

		<div class="col-10 border rounded shadow mx-auto">
			<h2 class="h1 mt-5 my-5 text-center">Me contacter</h2>

			<form id="contactForm" name="sentMessage" novalidate="novalidate">

				<div class="row">
					<div class="mt-3 col-md-6">
						<label>Nom</label>
						<input class="form-control" id="name" type="text" placeholder="Nom" required="required" data-validation-required-message="Veuillez entrer votre nom " autofocus/>

					</div>
					<div class="mt-3 col-md-6">

						<label>Adresse email</label>
						<input class="form-control" id="email" type="email" placeholder="Email" required="required" data-validation-required-message="Veuillez entrer votre adresse email"/>

					</div>
				</div>
				<div class="mt-4">

					<label>Message</label>
					<textarea class="form-control" id="Message" rows="5" placeholder="Veuillez entrer un message." required="required" data-validation-required-message="Veuillez entrer un message."></textarea>

				</div>
				<div class="mt-3 mb-5 text-center">

					<button type="submit" class="btn btn-primary btn-lg m-auto mx-auto">Envoyer</button>
				</div>


			</form>


		</div>
	</div>


{% endblock %}
